= page_header(t('engines.shirt_size.sizes.title'))
-# body
= form_with url: shirt_size.size_path, method: 'put' do |form|
  = markdown(t('engines.shirt_size.sizes.form_caption'))
  %div.form-group
    - @sizes.each do |option|
      %div.form-check
        = form.radio_button :size, option, class: 'form-check-input eos-radio-btn', checked: (option == @size)
        = form.label "size_#{option}", class: 'form-check-label' do
          = t("engines.shirt_size.sizes.labels.#{option}")
  = render('layouts/navigation_buttons') do
    = previous_step_button()
    = form.submit t('actions.next'), class: 'btn btn-primary'
