= page_header(t('engines.aws.cli.title'))
-# body
= form_with url: aws.cli_path, method: 'post' do |form|
  %div.form-group
    = form.label :arguments, markdown(t('engines.aws.cli.form_caption'))
    %div.input-group
      %div.input-group-prepend
        %span{style: 'margin-top: -4px;'} aws
      = form.text_field :arguments, class: 'form-control'
  %div.form-group
    = form.submit t('actions.exec'), class: 'btn btn-primary'
-# end
= render('layouts/navigation_buttons') do
  = previous_step_button()
